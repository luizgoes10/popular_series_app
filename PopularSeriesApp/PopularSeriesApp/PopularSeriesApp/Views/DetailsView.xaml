<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PopularSeriesApp.Views.DetailsView"
             Title="{Binding Name}">
    <ContentPage.Content>
        <ScrollView>
            <Grid
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand"
            RowSpacing="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="*" />
            </Grid.RowDefinitions>
            <StackLayout Padding="10">
                <Label Text="{Binding Name}" FontSize="20"/>

                <Image Source="{Binding Thumb}" HorizontalOptions="StartAndExpand"/>

                <Label Text="{Binding Vote_average}" FontSize="18"/>

                <Label Text="{Binding Overview}"/>

                <Button Text="Voltar" Command="{Binding NavigateBackCommand}" CommandParameter="{Binding NumberPage}" BackgroundColor="{Binding ButtonsBackGroundColor}" TextColor="White" Margin="100,30,100,0"/>

            </StackLayout>
        </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>