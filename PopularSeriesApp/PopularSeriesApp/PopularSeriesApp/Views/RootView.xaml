<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PopularSeriesApp.Views.RootView"
             xmlns:pages="clr-namespace:PopularSeriesApp.Views"
             IsPresented="{Binding IsPresent}">
  <MasterDetailPage.Master>
    <pages:RootViewMaster x:Name="MasterPage" />
  </MasterDetailPage.Master>
  <MasterDetailPage.Detail>
        <NavigationPage BarBackgroundColor="{Binding BarBackGroundColor}">
      <x:Arguments>
        <pages:MainView />
      </x:Arguments>
    </NavigationPage>
  </MasterDetailPage.Detail>
</MasterDetailPage>